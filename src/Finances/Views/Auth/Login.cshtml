@model Finances.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="auth-form">
                <h3>Login to <strong>Finances</strong></h3>
                <form method="post" novalidate>

                    <div class="text-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" />
                        <span class="label label-danger center-block auth-form__error" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span class="label label-danger center-block auth-form__error" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-success"/>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-warning auth-pull-right">Create account?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>